pipeline{
    agent any{
        stage ("Build Docker Image"){
            steps{
                echo "Build Docker Image"
                bat "Javac factorial.Java ."
            }
        }
            stage('Run') 
            {
                steps{
                    bat 'Java Factorial.Java' 
                } 
            }
            stage('Test') 
            {
                steps{
                    bat 'Java TestFactorial.java' 
                } 
            } 
            stage('Package JAR') 
            {
                steps{
                    bat 'Java testfactorial.Java,Manifest.txt,Factorial.Class' 
                } 
            } 
            stage('Assertion JAR') 
            {
                steps{
                    bat 'Java Factorial.Java' 
                } 
            } 
        }
    }
}

